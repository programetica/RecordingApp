<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RecordingApp</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/RecordRTC/5.6.1/RecordRTC.js"></script>

    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RecordingApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RecordingApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - RecordingApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <style>
        body {
            background-color: #121212; /* Dark background */
            color: #ffffff; /* Light text color */
            font-family: Arial, sans-serif; /* Font style */
        }

        h2 {
            color: #ffffff; /* Light color for headings */
        }

        label {
            color: #ffffff; /* Light color for labels */
        }

        input {
            background-color: #1e1e1e; /* Dark input background */
            color: #ffffff; /* Light input text color */
            border: 1px solid #444; /* Dark border */
            padding: 5px; /* Padding for inputs */
            border-radius: 4px; /* Rounded corners */
        }

        button {
            background-color: #007bff; /* Button background color */
            color: #ffffff; /* Button text color */
            border: none; /* No border */
            padding: 10px 15px; /* Padding for button */
            border-radius: 4px; /* Rounded corners */
            cursor: pointer; /* Pointer cursor on hover */
        }

            button:hover {
                background-color: #0056b3; /* Darker button on hover */
            }

        video {
            border: 1px solid #444; /* Dark border around video */
        }

        .bg-white {
            background-color: #121212 !important; /* Dark background */
            color: #ffffff; /* Light text color */
            font-family: Arial, sans-serif; /* Font style */
        }

        .navbar-brand {
            color: #ffffff !important; /* Light text color */

        }

        .nav-link {
            color: #ffffff !important; /* Light text color */
        }

    </style>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
